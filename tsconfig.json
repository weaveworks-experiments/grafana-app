{
    "compilerOptions": {
        "module": "system",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "ES6"
    },
    "include": [
        "src/**/*",
        "node_modules/moment"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}
